<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kolekcjewolak.MainPage">

    <StackLayout Padding="20">
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Dodaj kolekcję" Clicked="DodajKolekcje" Margin="5"/>
            <Button Text="Usuń kolekcję" Clicked="UsunKolekcje" Margin="5"/>
        </StackLayout>

        <Picker x:Name="wyborKolekcji" Title="Wybierz kolekcję" SelectedIndexChanged="WyborKolekcji_SelectedIndexChanged" Margin="0,20,0,20">
            <Picker.ItemDisplayBinding>
                <Binding Path="Nazwa" />
            </Picker.ItemDisplayBinding>
        </Picker>
        <Button Text="Przejdź do kolekcji" Clicked="PrzejdzDoKolekcji" WidthRequest="200" HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
